<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context="com.example.zoodex.DiscoveryActivity">

    <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/locate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="400dp"
            android:layout_marginEnd="15dp"
            android:clickable="true"
            app:backgroundTint="@color/black"

            android:contentDescription="re take photo"
            android:foreground="@android:drawable/ic_menu_mylocation"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:ignore="NotSibling" />

        <androidx.appcompat.widget.Toolbar
                android:id="@+id/navBar"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                android:background="#009688"
                app:navigationIcon="?attr/actionModeCloseDrawable"
                app:subtitleTextColor="#FFFFFF"
                app:title="Fiche animale"
                app:titleMarginStart="20dp"
                app:titleTextColor="#FFFFFF" tools:ignore="MissingConstraints"/>

    <ImageView
            android:id="@+id/notFound"
            android:src="@drawable/not_found_animal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:contentDescription="animal" tools:ignore="MissingConstraints" tools:layout_editor_absoluteY="56dp"
            tools:layout_editor_absoluteX="0dp"/>
    <TextView
            android:id="@+id/titleAnimal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Lion"
            android:textSize="34sp"
            android:textStyle="bold"
            tools:layout_editor_absoluteX="25dp" app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="488dp"/>
    <TextView
            android:id="@+id/descAnimal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:text="Vous n'avez pas encore découvert cet animal."
            app:layout_constraintTop_toBottomOf="@+id/titleAnimal" tools:ignore="MissingConstraints,UnknownIdInLayout"
            android:layout_marginTop="10dp" tools:layout_editor_absoluteX="-14dp"/>

    <TextView
            android:id="@+id/infoAnimal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:text="Pour obtenir des informations sur cet animal, prenez-le en photo."
            app:layout_constraintTop_toBottomOf="@+id/descAnimal" tools:ignore="MissingConstraints,UnknownIdInLayout"
            android:layout_marginTop="2dp" tools:layout_editor_absoluteX="-14dp"/>

    <TextView
            android:id="@+id/getAnimal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:text="Vous pouvez découvrir où se cache cet animal en cliquant sur le bouton localiser."
            app:layout_constraintTop_toBottomOf="@+id/infoAnimal" tools:ignore="MissingConstraints,UnknownIdInLayout"
            android:layout_marginTop="10dp" tools:layout_editor_absoluteX="-14dp"/>


</androidx.constraintlayout.widget.ConstraintLayout>
