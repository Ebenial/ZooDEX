<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/found"
        tools:context=".DiscoveryActivity">


    <ImageView
            android:id="@+id/notFound"
            android:src="@drawable/not_found_animal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:layout_editor_absoluteX="-4dp" app:layout_constraintBottom_toBottomOf="@+id/infoAnimal"
            android:layout_marginBottom="40dp"/>
    <Button
            android:id="@+id/locateToto"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginTop="320dp"
            android:layout_marginEnd="4dp"
            app:backgroundTint="@color/found"
            android:foreground="@android:drawable/ic_menu_mylocation"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:ignore="NotSibling"/>
    <TextView
            android:id="@+id/titleAnimal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Lion"
            android:textColor="@color/white"
            android:textSize="34sp"
            android:textStyle="bold"
            tools:layout_editor_absoluteX="0dp" app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="420dp"/>
    <TextView
            android:id="@+id/descAnimal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:textColor="@color/white"
            android:text="Vous n'avez pas encore découvert cet animal."
            app:layout_constraintTop_toBottomOf="@+id/titleAnimal" tools:ignore="MissingConstraints,UnknownIdInLayout"
            android:layout_marginTop="10dp" tools:layout_editor_absoluteX="-14dp"/>

    <TextView
            android:id="@+id/infoAnimal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:textColor="@color/white"
            android:text="Pour obtenir des informations sur cet animal, prenez-le en photo."
            app:layout_constraintTop_toBottomOf="@+id/descAnimal" tools:ignore="MissingConstraints,UnknownIdInLayout"
            android:layout_marginTop="2dp" tools:layout_editor_absoluteX="-14dp"/>

    <TextView
            android:id="@+id/getAnimal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:textColor="@color/white"
            android:text="Vous pouvez découvrir où se cache cet animal en cliquant sur le bouton localiser."
            app:layout_constraintTop_toBottomOf="@+id/infoAnimal" tools:ignore="MissingConstraints,UnknownIdInLayout"
            android:layout_marginTop="10dp" tools:layout_editor_absoluteX="-14dp"/>


</androidx.constraintlayout.widget.ConstraintLayout>
